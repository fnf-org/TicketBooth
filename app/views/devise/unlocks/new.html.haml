%h2 Resend unlock instructions

= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, data: { turbo: false } ) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    %p= f.label :email
    %p= f.email_field :email, autofocus: true, autocomplete: "email"
  .actions
    = f.submit "Resend unlock instructions", class: 'btn btn-large btn-primary'

= render "devise/shared/links"
