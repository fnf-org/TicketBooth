= render partial: 'shared/event_nav', locals: { event: @event, active_tab: { eald_passes: 'active' } }

.card
  .card-header
    .btn-group
      = link_to download_event_eald_payments_path(@event), class: 'btn btn-info hover-tooltip', title: 'Download CSV of the EALD Passes' do
        %i.icon-th-list
        Download CSV &darr;

  .card-body
    %table.table
      %thead
        %tr
          %th Name
          %th Email
          %th Transaction ID
          %th Early Arrival Passes
          %th Late Departure Passes
      %tbody
        - @eald_payments.each do |payment|
          %tr
            %td= payment.name
            %td= payment.email
            %td= payment.stripe_charge_id
            %td= payment.early_arrival_passes
            %td= payment.late_departure_passes
